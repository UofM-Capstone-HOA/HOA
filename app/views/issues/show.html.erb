<p id="notice"><%= notice %></p>

<section id="issue_form" class="container">
  <div class="section">
    <div class="row">
      <div class="col s12 m8 offset-m2 l8 offset-l2 ">
       <div class="card">
         <div class="card-content center-align"> 
          
            <div class="row">
              <div class="col s12">
                <p class="center-align"><%= @issue.date.strftime('%B %e, %Y') %><p>
              </div>
            </div>
            <div class="row">
              <div class="col s12">
                <p class="center-align"><%= @issue.home_owner.fullname %><p>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <p class="center-align" id="issue_note2"><%= @issue.note.html_safe %><p>
            	<label class="active" for="first_name2">Note</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
              	<img class = "img-responsive"  id="issue_picture2" src = "<%= @issue.picture.url %>">
                <label class="picture" for="issue_picture2">Picture</label>
              </div>
            </div>
  

            

         </div>
        </div>
      </div>
    </div>
  </div>
</section>


<%= link_to 'Edit', edit_issue_path(@issue) %> |
<%= link_to 'Back', issues_path %>
