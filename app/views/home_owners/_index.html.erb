<section id="ho_index">
  <div class="section">
    <div class="row">
      <div class="col s12 center-align">

        <table class="responsive-table highlight">
          <thead>
            <tr>
              <th>Firstname</th>
              <th>Lastname</th>
              <th>Email</th>
              <th>Phone</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @home_owners.each do |home_owner| %>
              <tr class="clickable-row" data-id='#show_ho' data-link='<%= admin_show_ho_path(home_owner_show: home_owner.id) %>'>
                <td><%= home_owner.firstname %></td>
                <td><%= home_owner.lastname %></td>
                <td><%= home_owner.email %></td>
                <td><%= home_owner.phone %></td>
                <td><%= link_to 'Edit', admin_edit_ho_path(home_owner_edit: home_owner.id) , method: :post %></td> 
                <td><%= link_to 'Destroy', home_owner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
</section>
