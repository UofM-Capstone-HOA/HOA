<!DOCTYPE html>
<html>
<head>
  <title>HOA</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	
<!-- Header and Navbar -->
	<header>
		<!-- Side Navbar for user not signed in -->
      	<% if not user_signed_in? %>
      		<ul class="side-nav fixed hide-on-med-and-down">
				<li><a href="#!" class="brand-logo"><i>Logo</i></a></li>
	    		<li><a href="#!">Log in</a></li>
	    		<li><a href="#!">About</a></li>
	    		<li><a href="#!">Contact</a></li>
	  		</ul>
	  		<ul id="slide-out" class="side-nav">
	   			<li><a href="#!">Log on</a></li>
	    		<li><a href="#!">About</a></li>
	    		<li><a href="#!">Contact</a></li>
	 		</ul>
      	<% end %>

      	<!-- Side Navbar for user signed in -->
      	<% if user_signed_in? %>
			<ul class="side-nav fixed hide-on-med-and-down">
				<li><a href="#!" class="brand-logo"><i>Logo</i></a></li>
	    		<li><a href="#!">First Sidebar Link</a></li>
	    		<li><a href="#!">Second Sidebar Link</a></li>
	    		<li><%=link_to 'Sign out', destroy_user_session_path(), method: :delete%></li>
	  		</ul>
	  		<ul id="slide-out" class="side-nav">
	   			<li><a href="#!">First Sidebar Link</a></li>
	    		<li><a href="#!">Second Sidebar Link</a></li>
	    		<li><%=link_to 'Sign out', destroy_user_session_path(), method: :delete%></li>
	 		</ul>
 		<% end %>

 		<!-- Menu button -->
 		<div class="container">
  			<a href="#" data-activates="slide-out" class="button-collapse hide-on-large-only"><i class="small mdi-navigation-menu"></i></a>
  		</div>

    </header>
   
    <!-- Content -->
    <main>
    	<div class="container">
      		<div class="row">
	      		<div class="col s12 m9 l9"> 
	   				<% if flash[:notice] %>
					 	<p class="alert alert-info"><%=flash[:notice] %></p> 
					<% end %>

					 <% if flash[:alert] %>
						<p class="alert alert-danger"><%= flash[:alert] %></p>   
					<% end %>
	       
	       		</div>
	       	</div>
				 	
  				<%= yield %>
  			</div>
     		

    	</div>
    </main>

 

</body>
</html>
