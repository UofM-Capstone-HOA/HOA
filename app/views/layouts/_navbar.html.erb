	    			<li><%=link_to 'Admin', admin_path(current_user), class: "waves-effect waves-purple"%></li>
	    		<% end %>
	    		<li><%=link_to 'Routes', hoaroutes_path, class: "waves-effect waves-purple", 'data-no-turbolink' => true %></li>
