<section id="ad_index">
  <div class="section">
    <div class="row">
      <div class="col s12 center-align">

            <table class="responsive-table highlight">
              <thead>
                <tr>
                  <th>Number</th>
                  <th>Street</th>
                  <th>City</th>
                  <th>State</th>
                  <th>Homeowner</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @addresses.each do |address| %>
                  <tr class="clickable-row" data-id='<%= address.id %>' data-link='address'>
                    <td><%= address.number %></td>
                    <td><%= address.street %></td>
                    <td><%= address.city %></td>
                    <td><%= address.state %></td>
                    <td><%= address.home_owner ? address.home_owner.fullname : ""%></td>
                    <td><%= link_to 'Edit', admin_edit_address_path(address_edit: address.id), method: :post %></td>
                    <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </tbody>
        </table>
      </div>
    </div>

  </div>

</section>

