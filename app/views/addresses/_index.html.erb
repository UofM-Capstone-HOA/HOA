<section id="ad_index">
  <div class="section">
    <div class="row">
      <div class="col s12 center-align">
        <h5>Listing Addresses</h5>

            <table class="responsive-table">
              <thead>
                <tr>
                  <th>Number</th>
                  <th>Street</th>
                  <th>City</th>
                  <th>State</th>
                  <th>Homeowner</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @addresses.each do |address| %>
                  <tr>
                    <td><%= address.number %></td>
                    <td><%= address.street %></td>
                    <td><%= address.city %></td>
                    <td><%= address.state %></td>
                    <td><%= address.home_owner ? address.home_owner.fullname : ""%></td>
                    <td><%= link_to 'Show', address %></td>
                    <td><%= link_to 'Edit', edit_address_path(address) %></td>
                    <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </tbody>
        </table>
      </div>
    </div>
    <div class="row">
      <div class="col s12 center-align">
        <a class="modal-trigger waves-effect waves-light btn" href='#new_ad'>
          New Address
        </a>
          
        <div id="new_ad" class="modal">
          <div class="modal-content">
            <%= render 'addresses/new' %>
          </div>
        </div>

      </div>

    <div id="edit_ad" class="modal">
      <div class="modal-content">
        <%= render 'addresses/edit' %>
      </div>
    </div>

  </div>

</section>

