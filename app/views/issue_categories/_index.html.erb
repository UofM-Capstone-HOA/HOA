<section id="ic_index">
  <div class="section">
    <div class="row">
      <div class="col s12 center-align">
        <h5>Issue Categories</h5>

        <table class="responsive-table">
          <thead>
            <tr>
              <th>Name</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @issue_categories.each do |issue_category| %>
              <tr>
                <td><%= issue_category.name %></td>                
                <td><%= link_to 'Show', issue_category %></td>
                <td><%= link_to 'Edit', edit_issue_category_path(issue_category) %></td>                
                <td><%= link_to 'Destroy', issue_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="row">
      <div class="col s12 center-align">
        <a class="modal-trigger waves-effect waves-light btn" href='#new_ic'>
          Add Issue Category
        </a>
          
        <div id="new_ic" class="modal">
          <div class="modal-content">
            <%= render 'issue_categories/new' %>
          </div>
        </div>
            
         


      </div>
    </div>
  </div>
</section>

