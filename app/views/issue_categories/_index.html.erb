<section id="ic_index">
  <div class="section">
    <div class="row">
      <div class="col s12 center-align">

        <table class="responsive-table highlight">
          <thead>
            <tr>
              <th>Name</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @issue_categories.each do |issue_category| %>
              <tr class="clickable-row" data-id='<%= issue_category.id %>' data-link='issue_category'>
                <td><%= issue_category.name %></td>                
                <td><%= link_to 'Edit', admin_edit_ic_path(issue_category_edit: issue_category.id), method: :post %></td>
                <td><%= link_to 'Destroy', issue_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

  </div>
</section>



